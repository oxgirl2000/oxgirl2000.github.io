---
interface Props {
	title: string;
	body: string;
	href: string;
}

const { href, title, body } = Astro.props;
---

<li class="box link-card">
	<a href={href}>
		<p class="title">
			{title} &rarr;
		</p>
    <hr/>
		<p>
			{body}
		</p>
	</a>
</li>

<style>
	.link-card {
		list-style: none;
		display: flex;
		padding: 0;
		background-color: var(--ox-bg);
		transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
	}

	.link-card > a {
		text-decoration: none;

		padding: calc(1.5rem - 1px);
		border-radius: 8px;
		color: var(--ox-fg);
	}

	.title {
		margin: 0;
    font-family: var(--font-bold);
		transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
	}

  hr {
    border-color: var(--ox-pink);
  }

	p {
		margin-top: 0.5rem;
		margin-bottom: 0;
	}

	.link-card:is(:hover, :focus-within) {
	}

	.link-card:is(:hover, :focus-within) h2 {
		color: var(--ox-orange);
	}
</style>
