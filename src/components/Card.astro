---
interface Props {
	title: string;
	body: string;
	href: string;
}

const { href, title, body } = Astro.props;
---

<li class="box link-card">
	<a href={href}>
		<p class="title">
			{title} &rarr;
		</p>
    <hr/>
		<p>
			{body}
		</p>
	</a>
</li>

<style>
	.link-card {
		list-style: none;
		display: flex;
		padding: 0;
		background-color: var(--ox-bg);
		/* background-image: none; */
		/* background-size: 400%; */
		/* border-radius: 7px; */
		/* background-position: 100%; */
		transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
		/* box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.1); */
	}
	.link-card > a {
		/* width: 100%; */
		text-decoration: none;
		/* line-height: 1.4; */
		padding: calc(1.5rem - 1px);
		border-radius: 8px;
		color: var(--ox-fg);
		/* background-color: #23262d; */
		/* opacity: 0.8; */
	}
	.title {
		margin: 0;
		/* font-size: 1.25rem; */
    font-weight: bold;
		transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
	}
  hr {
    border: var(--border);
    border-style: inset;
    border-color: var(--ox-pink);
    /* height: 1px; */
  }
	p {
		margin-top: 0.5rem;
		margin-bottom: 0;
	}
	.link-card:is(:hover, :focus-within) {
		/* background-position: 0; */
		/* background-image: var(--accent-gradient); */
    

	}
	.link-card:is(:hover, :focus-within) h2 {
		color: var(--ox-orange);
	}
</style>
