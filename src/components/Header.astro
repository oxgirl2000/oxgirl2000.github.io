---
import NavBar from "@/components/NavBar";

interface Props {}

const {} = Astro.props;
---

<div class="header">
  <a href="/">
    <h1 class="title">oxgr</h1>
  </a>
  <!-- <div class="space"></div> -->
  <NavBar />
</div>

<style>
  .header {
    margin-left: var(--margin-base);
    margin-right: var(--margin-base);
    margin-top: var(--margin-header-top);
    margin-bottom: var(--margin-header-btm);
    padding-left: var(--padding-header);
    padding-right: var(--padding-header);
    display: flex;
    flex-direction: row;
    /* justify-content: flex-start; */
    justify-content: space-between;
    gap: calc(var(--padding) * 2);
    height: 3rem;
  }

  .header > * {
    margin: 0;
    margin-top: auto;
    margin-bottom: -2px;
    /* z-index: 2; */
  }

  .title {
    color: var(--ox-orange);
    transition: var(--transition);
    text-decoration: underline var(--ox-pink) 2px;
    color: var(--ox-orange);
    padding: 0 var(--padding);
    margin: 0;
  }

  .title:hover {
    color: var(--ox-yellow);
    text-decoration-color: var(--ox-orange);
  }

  @media screen and (max-width: 600px) {
    .header > * {
      margin-bottom: auto;
    }
    .header {
      justify-content: space-between;
    }
  }
</style>
