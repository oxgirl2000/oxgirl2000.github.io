---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
	:root {
    --ox-bg: #24202c;
    --ox-fg: #f4cde9;
    --ox-selection: #5a4551;
    --ox-dim: #6f5a71;
    --ox-orange: #f99286;
    --ox-pink: #b6377d;
    --ox-muted: var(--ox-dim);
    --ox-border: var(--ox-dim);

    --border: solid 1px var(--ox-border);

		--accent: 136, 58, 234;
		--accent-light: 224, 204, 250;
		--accent-dark: 49, 10, 101;
		--accent-gradient: linear-gradient(
			45deg,
			rgb(var(--accent)),
			rgb(var(--accent-light)) 30%,
			white 60%
		);
	}

  @font-face {
    font-family: 'Meslo';
    src: url('/fonts/Meslo/MesloLGS-Regular.ttf') format('woff');
    font-weight: normal;
    font-style: normal;
    font-display: swap;
  }
  
	html {
		font-family: 
      Meslo, 
      Menlo, 
      system-ui, 
      sans-serif;
    color: var(--ox-fg);
		background: var(--ox-bg);
		font-size: 14px;
	}

	code {
		font-family:
      Meslo,
			Menlo,
			Monaco,
			Lucida Console,
			Liberation Mono,
			DejaVu Sans Mono,
			Bitstream Vera Sans Mono,
			Courier New,
			monospace;
	}

  .box {
    border: var(--border);
    border-radius: 12px;
    padding: 1rem;
  }
  
  .no-box {
    padding: 0 1rem;
  }
</style>
